<div class="container mt-5">
<% if notice.present? %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

  <h1 class="mb-4">Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <div class="card mb-3">
        <div class="card-body">
          <%= render post %>
          <p class="mt-3">
            <%= link_to "Show this post", post, class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

</div>
